
  <%= form_for [:host, @space] do |f| %>
    <%= render 'error_messages' %>
    <div class="form-row md-form">
      <div class="form-group col-md-6 md-form" >
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group col-md-6 md-form" >
        <%= f.label :price, "Price $" %>
        <%= f.number_field :price, min: 0, max: 1000, :id => "price", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group md-form">
      <%= f.label :location, "Address" %>
      <%= f.text_field :location, :id => "location", :class => "form-control" %>
    </div>
    <div class="form-row md-form">
      <div class="form-group col-md-6">
        <%= f.label :city, "City" %>
        <%= f.text_field :city, :id => "city", :class => "form-control" %>
      </div>
      <div class="form-group col-md-6 md-form">
        <%= f.label :state, "State" %>
        <%= f.select :state, options_for_select(us_states),{}, :id => "state", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group md-form">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, :id => "description", :class => "form-control"  %>
    </div>
    <div class="form-group md-form">
      <%= f.label :rules, "Rules" %>
      <%= f.text_area :rules, :id => "rules", :class => "form-control" %>
    </div>
    <div class="form-group md-form">
          <%= f.label "Amenities" %>
    </div>
    <div class="form-row md-form">
      <%= f.collection_check_boxes(:amenity_ids, Amenity.all, :id, :name) do |amenity| %>
      <div class="form-group col-sm-4" >
       <%= amenity.label { amenity.check_box(class: "check_box") + amenity.text }%>
     </div>
      <% end %>
    </div>
    <div class="form-group md-form">
      <%= f.label :space_image, "Upload an image" %>
      <%= f.file_field :space_image, :id => "space_image", :class => "form-control" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit yield(:button_text), :class => "btn btn-primary" %>
             <hr class="hr-light mb-3 mt-4">
    </div>
  <% end %>


