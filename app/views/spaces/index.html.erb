

<div class="main-content container">
  <h1 id="spaces-index-header">Spaces
    <small>near you</small>
  </h1>

  <div class="row">
    <div class="col-md-8">
      <%= render 'shared/results_map', locals: { markers: @map_markers } %>
    </div>
  </div><br>

  <%= search_form_for @search, url: '/spaces/filter',
  html: {method: :post, :class => "form-inline"} do |f| %>
  <div class="field form-row align-items-center">
    <div class="col-auto">
      <%= f.label :location_cont, "Filter by Location:" %>
      <%= f.text_field :location_cont, value: session[:current_search], :class => "form-control" %>
    </div>
    <div class="col-auto">
      <%= f.label :price_gteq, "and Price: Min" %>
      <%= f.text_field :price_gteq, :class => "form-control" %>
    </div>
    <div class="col-auto">
      <%= f.label :price_lteq, "Max" %>
      <%= f.text_field :price_lteq, :class => "form-control" %>
    </div>
    <div class="col-auto">
    <%= f.submit "Apply", :class => "btn btn-primary inline-button" %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <% @spaces.each do |space| %>
    <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
      <div class="card h-100 my-rentals" id="space-card">
        <%= link_to image_tag(space.space_image.url(:square)), space_path(:id => space.id), :class => "rounded-circle img-fluid d-block mx-auto"  %>
        <div class="card-body space_icon">
          <h4 class="card-title text-center">
            <%= link_to space.title, space_path(:id => space.id) %>
          </h4>
          <hr>
          <p class="card-text"><%= space.description %></p>
        </div>
      </div>
    </div>
    <% end %>

