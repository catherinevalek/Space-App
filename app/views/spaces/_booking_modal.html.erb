  <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" id="payment-modal" data-toggle="modal" data-target="#paymentModal">
  <% if (current_user) && (current_user.id == @space.owner.id) %>
    Block my space
  <% else %>
    Confirm Booking
  <% end %>
</button>

<!-- Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header payment">
        <h5 class="modal-title" id="paymentModalLabel">Booking confirmation & Payment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body confirmation-modal">
        Click below to finalize your booking!
        <%= render "shared/stripe_form" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
<!--         <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

