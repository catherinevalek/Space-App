<% provide(:title, @user) %>
<div>
  <h1><%= @user.first_name + " " + @user.last_name %></h1>
  <div>
  <p><%= link_to "Post a space", new_host_space_path %></p>
    <% if @user.spaces.any? %>
    <h2> My spaces for rent: </h2>
      <ul>
        <% @user.spaces.each do | space | %>
          <li> <%= link_to space.title, space %></li>
          <p><%= link_to "Edit", edit_host_space_path(:space => space.id)
           %></p>
           <% if space.owner == current_user %>
            <p>Remove your space? <%= link_to "Delete", [:host, space], method: :delete, data: { confirm: "Are you sure?" } %></p>
          <% end %>
        <% end %>
      </ul>
  <% end %>
  </div>
  <div>
    <% if @user.bookings.any? %>
    <h2> My bookings: </h2>
      <ul>
        <% @user.bookings.each do | booking | %>
          <li> <%= link_to booking.space.title, booking %></li>
        <% end %>
      </ul>
  <% end %>
  <p><%= link_to "Settings", edit_user_path(current_user) %></p>
  </div>
</div>
