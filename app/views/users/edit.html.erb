<div class="row flex-center pt-5 mt-3">
	<div class="col-md-6 col-xl-5 mx-auto">
		<div class="card">
			<div class="card-body">
				<div class="text-center">
					<h3 class="white-text"><i class="fa fa-space white-text"></i> Edit Profile</h3>
					<hr>
				</div>
				<% provide(:title, 'Edit profile') %>
				<% provide(:button_text, 'Update') %>
				<%= render "form" %>
				<% if @user == current_user %>
				<p>Remove your account? <%= link_to "Delete", @user, method: :delete,
					data: { confirm: "Are you sure?" } %></p>
					<% end %>
				</div>
			</div>
		</div>
	</div>